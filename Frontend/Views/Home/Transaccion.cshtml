@{
    ViewBag.Title = "Mis Cuentas";
}

<br />

<fieldset>
    <div class="row">

        <div class="col-md-6">
            <label style="font-size: x-large; font-family: 'Century Gothic', CenturyGothic, AppleGothic, sans-serif; font-weight: bold;"> Mis Transacciones </label>
        </div>

        <div class="col-md-6">
            @if (Session["UserName"] != null)
            {
                <label style="float: right; font-family: 'Century Gothic', CenturyGothic, AppleGothic, sans-serif;">
                    Bienvenid@@ @Session["UserName"].ToString()
                </label>
            }
        </div>
    </div>

</fieldset>
<hr />

<div ng-app="app" ng-controller="TransaccionesController as $ctrl">

    <input hidden id="id_usuario" value="@ViewBag.id_usuario" />

    <div id="loading" ng-show="$ctrl.loading">
        <img src="~/Images/ring.gif" class="ajax-loader" />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Fecha</th>
                <th style="text-align: center;"  scope="col">Tipo</th>
                <th style="text-align: center;"  scope="col">Cuenta</th>
                <th style="text-align: right;" scope="col">Monto</th>
                <th style="text-align: right;" scope="col">GMF</th>
                <th style="text-align: center;"  scope="col">Cuenta Destino</th>
                <th style="text-align: right;" scope="col">Saldo</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in $ctrl.data.transacciones">
                <td style="vertical-align: middle;"><span ng-bind="(item.fecha_tra)"></span></td>
                <td style="vertical-align: middle;text-align: center;"><span ng-bind="(item.tipo_transaccion)"></span></td>
                <td style="vertical-align: middle;text-align: center;"><span ng-bind="(item.cuenta)"></span></td>
                <td style="vertical-align: middle;text-align: right;">$<span ng-bind="(item.monto | number:0)"></span></td>
                <td style="vertical-align: middle;text-align: right;">$<span ng-bind="(item.valor_gmf | number:0)"></span></td>
                <td style="vertical-align: middle;text-align: center;"><span ng-bind="(item.cuenta_destino)"></span></td>
                <td style="vertical-align: middle;text-align: right;">$<span ng-bind="(item.saldo_operacion | number:0)"></span></td>
            </tr>
        </tbody>
    </table>
</div>

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-animate.min.js"></script>
<script src="~/Scripts/App.js"></script>
<script src="~/Scripts/i18n/angular-locale_es-co.js"></script>
<script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>

<link href="~/Content/angular-ui-switch.min.css" rel="stylesheet" />
<script src="~/Scripts/angular-ui-switch.min.js"></script>

<script src="~/Scripts/ng-tags-input.min.js"></script>
<link href="~/Content/ng-tags-input.min.css" rel="stylesheet" />
<link href="~/Content/ng-tags-input.bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/angular-toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/angular-toastr.tpls.min.js"></script>

<script src="~/Scripts/App/Cuentas.js"></script>